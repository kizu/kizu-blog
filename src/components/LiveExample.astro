---
import type { HTMLAttributes } from 'astro/types';
import { markdown } from '@astropub/md'

interface Props extends HTMLAttributes<'a'> {
	caption?: string;
	shouldHideHTML?: boolean;
}

const { shouldHideHTML, caption, ...props } = Astro.props;

// TODO: use a proper sanitizer, lol.
let html = await Astro.slots.render('default');
const foundHTML = html.match(/<pre[^>]*language-html[^>]*>([\s\S]+?)<\/pre>/)?.[1]?.replaceAll(/<[^>]+>/g, '')?.replaceAll('&lt;', '<')?.replaceAll('&gt;', '>')?.replaceAll('&quot;', '"')?.replaceAll('&amp;', '&')?.replaceAll('&#x3C;', '<')

const foundCSS = html.match(/<pre[^>]*language-css[^>]*>([\s\S]+?)<\/pre>/)?.[1]?.replaceAll(/<[^>]+>/g, '')?.replaceAll('&lt;', '<')?.replaceAll('&gt;', '>')?.replaceAll('&quot;', '"')?.replaceAll('&amp;', '&')

if (shouldHideHTML) {
	html = html.replaceAll(/<pre[^>]*language-html[^>]*>([\s\S]+?)<\/pre>/g, '');
}

const captionHTML = caption ? (await markdown(caption)).toString().trim().replace(/^<p>(.+)<\/p>$/, '$1') : undefined;

---

<figure {...props}>
	<Fragment set:html={foundHTML} />
	<style set:html={foundCSS} />
	<Fragment set:html={html} />
	{captionHTML ? <figcaption set:html={captionHTML} /> : null}
</figure>
