---
export interface Props {
	date: Date;
	class?: string;
	hasOnlyDays?: boolean;
}

const { date, hasOnlyDays, ...rest } = Astro.props;
---

<time datetime={date.toISOString()} {...rest}>{
	date.toLocaleDateString('en', {
		year: hasOnlyDays ? undefined : 'numeric',
		month: hasOnlyDays ? undefined : 'long',
		day: 'numeric',
	})
}</time>
