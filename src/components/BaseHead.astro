---
import '../styles/global.css';

export interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
const { title = SITE_TITLE, description = SITE_DESCRIPTION, image } = Astro.props;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<link rel="canonical" href={canonicalURL} />
<link rel="alternate" type="application/rss+xml" title="blog.kizu.dev RSS" href={`${Astro.url}rss.xml`} />

<title>{title}{title !== SITE_TITLE ? ` â€” ${SITE_TITLE}` : null}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image
	? <meta property="og:image" content={new URL(image, Astro.url)} />
	: null
}
