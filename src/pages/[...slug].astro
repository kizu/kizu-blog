---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';
import { betterSlug } from '../lib/betterSlug';

import { Link } from '@components/mdx/Link.tsx';
import { Paragraph } from '@components/mdx/Paragraph.tsx';
import { ListItem } from '@components/mdx/ListItem.tsx';
const components = {
	a: Link,
	p: Paragraph,
	li: ListItem,
};

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: betterSlug(post.slug) },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data}>
	<Content components={components} />
</BlogPost>
