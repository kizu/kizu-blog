---
import MastodonPostInfoComponent from './MastodonPostInfoComponent.web'
import { getMastodonPostLink } from '@lib/getMastodonPostLink';
const { mastodonPostId } = Astro.props;

const href = getMastodonPostLink(mastodonPostId);
---

<MastodonPostInfoComponent>
  <p>
    Let me know what you think about this <a rel="me" href={href}>on Mastodon</a>!
  </p>
</MastodonPostInfoComponent>
